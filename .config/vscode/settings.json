{
    "editor.tabSize": 2,
    "editor.multiCursorModifier": "ctrlCmd",
    "markdown-preview-enhanced.enableTypographer": true,
    "markdown-preview-enhanced.frontMatterRenderingOption": "code block",
    "markdown-preview-enhanced.printBackground": true,
    "clock.dateFormat": "HH:MM (dd.mm)",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "markdown-preview-enhanced.enableExtendedTableSyntax": true,
    "markdown-preview-enhanced.scrollSync": false,
    "git.inputValidationLength": 88,
    "liveshare.featureSet": "insiders",
    "editor.suggest.maxVisibleSuggestions": 6,
    "editor.suggestOnTriggerCharacters": false,
    "editor.quickSuggestionsDelay": 100,
    "editor.parameterHints.enabled": true,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.minimap.enabled": true,
    "breadcrumbs.enabled": false,
    "hexdump.littleEndian": false,
    "hexdump.nibbles": 4,
    "workbench.activityBar.visible": true,
    "extensions.ignoreRecommendations": true,
    "java.configuration.checkProjectSettingsExclusions": false,
    "java.errors.incompleteClasspath.severity": "ignore",
    "files.associations": {
        "*.ne": "bnf"
    },
    "search.smartCase": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "workbench.colorTheme": "Activate SCARLET protocol (beta)",
    "editor.bracketPairColorization.enabled": false,
    "workbench.editor.untitled.hint": "hidden",
    "editor.inlineSuggest.enabled": true,
    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "plaintext": true,
        "markdown": true
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "yaml.schemas": {
        "https://json.schemastore.org/github-workflow": "/.github/workflows/**/*.yml"
    },
    "[css]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "twind.styles": [
        "style",
        "styled",
        "css",
        "apply"
    ],
    "colorize.languages": [
        "css",
        "sass",
        "scss",
        "less",
        "postcss",
        "sss",
        "stylus",
        "xml",
        "svg",
        "json",
        "typescript",
        "javascript",
        "typescriptreact",
        "javascriptreact"
    ],
    "colorize.colorized_colors": [
        "ARGB",
        "RGB",
        "HSL"
    ],
    
}