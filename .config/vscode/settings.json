{
  // general settings
  "breadcrumbs.enabled": true,
  "clock.dateFormat": "HH:MM (dd.mm)",
  "comments.visible": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": false,
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.parameterHints.enabled": false,
  "editor.quickSuggestionsDelay": 100,
  "editor.stickyScroll.enabled": false,
  "editor.suggestOnTriggerCharacters": false,
  "editor.tabSize": 2,
  "editor.unicodeHighlight.invisibleCharacters": false,
  "emmet.showExpandedAbbreviation": "never",
  "extensions.ignoreRecommendations": true,
  "git.blame.editorDecoration.enabled": false,
  "git.blame.statusBarItem.enabled": true,
  "git.inputValidationLength": 88,
  "githubPullRequests.hideViewedFiles": true,
  "githubPullRequests.pullBranch": "never",
  "hexdump.littleEndian": false,
  "hexdump.nibbles": 4,
  "java.errors.incompleteClasspath.severity": "ignore",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "liveshare.featureSet": "insiders",
  "lldb.suppressUpdateNotifications": true,
  "markdown-preview-enhanced.enableExtendedTableSyntax": true,
  "markdown-preview-enhanced.enableTypographer": true,
  "markdown-preview-enhanced.frontMatterRenderingOption": "code block",
  "markdown-preview-enhanced.printBackground": true,
  "markdown-preview-enhanced.scrollSync": false,
  "markdown.editor.pasteUrlAsFormattedLink.enabled": "never",
  "markdown.preview.doubleClickToSwitchToEditor": false,
  "search.smartCase": true,
  "terminal.integrated.inheritEnv": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "workbench.colorTheme": "Light Pink",
  "workbench.editor.doubleClickTabToToggleEditorGroupSizes": "maximize",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.languageDetection": false,
  "workbench.editor.pinnedTabSizing": "shrink",
  "workbench.editor.preferHistoryBasedLanguageDetection": true,
  "workbench.editor.tabActionLocation": "left",
  "workbench.preferredDarkColorTheme": "Activate SCARLET protocol (beta)",
  "workbench.preferredLightColorTheme": "Light Pink",
  "workbench.colorCustomizations": {
    "[Light Pink]": {
      "editor.wordHighlightBackground": "#de77b720",
      "editor.wordHighlightStrongBackground": "#de77b770",
      "editor.selectionHighlightBackground": "#ADD6FF36",
      "editor.selectionBackground": "#ffc1dc80",
    }
  },
  "files.associations": {
    "*.ne": "bnf"
  },
  "colorize.languages": [
    "css",
    "sass",
    "scss",
    "less",
    "postcss",
    "sss",
    "stylus",
    "xml",
    "svg",
    "json",
    "typescript",
    "javascript",
    "typescriptreact",
    "javascriptreact",
    "markdown"
  ],
  "colorize.colorized_colors": ["ARGB", "RGB", "HSL"],

  // disable most AI "features" (except regular Copilot suggestions)
  "chat.agent.enabled": false,
  "chat.agentsControl.enabled": false,
  "chat.checkpoints.enabled": false,
  "chat.detectParticipant.enabled": false,
  "chat.extensionTools.enabled": false,
  "chat.implicitContext.suggestedContext": false,
  "chat.sendElementsToChat.attachCSS": false,
  "chat.sendElementsToChat.attachImages": false,
  "chat.sendElementsToChat.enabled": false,
  "chat.tools.terminal.enableAutoApprove": false,
  "chat.useAgentsMdFile": false,
  "editor.inlineSuggest.edits.allowCodeShifting": "never",
  "editor.inlineSuggest.edits.showLongDistanceHint": false,
  "editor.inlineSuggest.enabled": true,
  "github.copilot.chat.agent.currentEditorContext.enabled": false,
  "github.copilot.chat.copilotDebugCommand.enabled": false,
  "github.copilot.chat.newWorkspaceCreation.enabled": false,
  "github.copilot.chat.reviewAgent.enabled": false,
  "github.copilot.chat.reviewSelection.enabled": false,
  "github.copilot.chat.setupTests.enabled": false,
  "github.copilot.chat.summarizeAgentConversationHistory.enabled": false,
  "github.copilot.editor.enableCodeActions": false,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "yaml": true
  },
  "github.copilot.nextEditSuggestions.allowWhitespaceOnlyChanges": false,
  "github.copilot.nextEditSuggestions.enabled": false,
  "github.copilot.nextEditSuggestions.fixes": false,
  "githubPullRequests.experimental.chat": false,
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "workbench.settings.showAISearchToggle": false,
  "accessibility.verbosity.inlineChat": false,
  "inlineChat.holdToSpeech": false,

  // formatters, linters, etc.
  "ltex.additionalRules.motherTongue": "de",
  "ltex.additionalRules.languageModel": "/Users/janina/Downloads/languagetool-ngrams",
  "ltex.additionalRules.enablePickyRules": true,
  "ltex.enabledRules": {},
  "ltex.enabled": [
    "typst",
    "bibtex",
    "context",
    "context.tex",
    // "html",
    "latex",
    // "markdown",
    // "mdx",
  ],
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow": "/.github/workflows/**/*.yml"
  },
  "yaml.format.enable": false,
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "biome.requireConfiguration": true,
  "prettier.printWidth": 160,
  "prettier.semi": false,
  "prettier.requireConfig": true,
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": { "source.organizeImports.biome": "explicit" }
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": { "source.organizeImports.biome": "explicit" }
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": { "source.organizeImports.biome": "explicit" }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": { "source.organizeImports.biome": "explicit" }
  },
  "[plaintext]": {
    "editor.acceptSuggestionOnEnter": "off"
  },

  // unrelated settings
  // (added by VSCode through the UI and therefore added at the end, this is just a divider line to be able to easily distinguish them from the settings above and move them to the correct group)
}