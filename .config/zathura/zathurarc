# key mapping
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom out
map J zoom in
map i recolor
map p print

# settings
set recolor true

set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1

set adjust-open "width"

set statusbar-home-tilde "true"

set selection-clipboard clipboard

# theme

# > selections, searching
set highlight-color         "#ff0080"
set highlight-active-color  "#268bd2"

# > autocompletion
set completion-bg           "#000000"
set completion-fg           "#ffffff"
set completion-highlight-bg "#ff0080"
set completion-highlight-fg "#ffffff"

# > command input
set inputbar-bg             "#000000"
set inputbar-fg             "#ffffff"

# > table of content
set index-bg                "#000000"
set index-fg                "#ffffff"
set index-active-bg         "#ff0080"
set index-active-fg         "#ffffff"

