export LESS_TERMCAP_mb=$(tput bold; tput setaf 2)               # mouse blink; green
export LESS_TERMCAP_md=$(tput bold; tput setaf 15)              # bold;        white
export LESS_TERMCAP_me=$(tput sgr0)                             # reset for bold, blink and underline
export LESS_TERMCAP_so=$(tput setaf 0; tput setab 14)           # standout;    black on grey (status bar at the bottom)
export LESS_TERMCAP_se=$(tput rmso; tput sgr0)                  # reset standout
export LESS_TERMCAP_us=$(tput smul; tput bold; tput setaf 12)   # underline;   blue
export LESS_TERMCAP_ue=$(tput rmul; tput sgr0)                  # stop underline

export LESS_TERMCAP_mr=$(tput rev)
export LESS_TERMCAP_mh=$(tput dim)
export LESS_TERMCAP_ZN=$(tput ssubm)
export LESS_TERMCAP_ZV=$(tput rsubm)
export LESS_TERMCAP_ZO=$(tput ssupm)
export LESS_TERMCAP_ZW=$(tput rsupm)
export GROFF_NO_SGR=1

